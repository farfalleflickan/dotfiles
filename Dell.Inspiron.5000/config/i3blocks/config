command=/usr/lib/i3blocks/$BLOCK_NAME
separator_block_width=10
markup=none

[iface]
instance=wlp1s0
color=#00FF00
interval=10
separator=false

[cpu_usage]
label=CPU
interval=5

[memory]
label=MEM
separator=true
interval=5

[battery]
label=⚡
interval=60

[volume]
label=♪
instance=Master
interval=once
signal=1

[time]
command=date '+%H:%M %d-%m-%y'; [[ -z "${BLOCK_BUTTON}" ]] || gsimplecal & 
interval=30
