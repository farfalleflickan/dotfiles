alias pU="pacmatic -Syu"
alias pR="pacmatic -Rns"
alias pO="pacmatic -Rns $(pacman -Qtdq)"
alias pS="pacmatic -S"
alias pSs="pacmatic -Ss"
alias K="sudo killall"
alias fuck='sudo $(history -p \!\!)'
alias cls="clear"
alias snano="sudo nano"

